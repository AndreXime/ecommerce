---
import Layout from "@/layout/layout.astro";
import CheckoutComponent from "./_checkout";

const dbUser = {
    name: "André Ximenes",
    email: "andre@exemplo.com",
};

const dbCart = {
    items: [
        {
            id: 1,
            name: "AeroBook Pro 15 - Real Data",
            price: 1499.0,
            quantity: 1,
            img: "https://images.unsplash.com/photo-1496181133206-80ce9b88a853?auto=format&fit=crop&q=80&w=100",
        },
        {
            id: 2,
            name: "SoundScape ANC",
            price: 299.0,
            quantity: 1,
            img: "https://images.unsplash.com/photo-1505740420928-5e560c06d30e?auto=format&fit=crop&q=80&w=100",
        },
    ],
    subtotal: 1798.0,
    shipping: 0,
    total: 1798.0,
};
---

<Layout
    title="Checkout Seguro | Emporium da Tecnologia"
    description="Finalize sua compra com segurança"
>
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div
            class="container mx-auto px-4 py-4 flex justify-between items-center"
        >
            <a href="/" class="flex items-center group">
                <div class="bg-blue-600 text-white p-2 rounded-lg shadow-lg">
                    <i class="fas fa-bolt text-xl"></i>
                </div>
                <span
                    class="ml-3 text-xl font-bold tracking-tight text-gray-900"
                    >Emporium da Tecnologia</span
                >
            </a>
            <div class="flex items-center text-sm text-gray-500">
                <i class="fas fa-lock mr-2 text-green-600"></i> Checkout Seguro
            </div>
        </div>
    </header>

    <main
        class="flex-grow container mx-auto px-4 py-8 bg-gray-50/50 min-h-screen"
    >
        <CheckoutComponent client:load initialOrder={dbCart} user={dbUser} />
    </main>

    <footer
        class="mt-auto py-8 text-center text-sm text-gray-400 border-t border-gray-200 bg-white"
    >
        <p>
            &copy; 2024 Emporium da Tecnologia. Transação segura criptografada.
        </p>
    </footer>
</Layout>
