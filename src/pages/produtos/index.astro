---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "@/layout/layout.astro";
import StarRating from "@/components/StarRating";
import { serverGet } from "@/lib/serverApi";
import { formatPrice } from "@/lib/utils";
import { ArrowRight, Check, ChevronDown, ListFilter } from "lucide-preact";
import type { PaginatedResponse, ProductSummary, Category } from "@/database/productsTypes";

export const prerender = false;

const params = Astro.url.searchParams;
const currentPage = Number(params.get("page") || "1");
const searchTerm = params.get("s");
const selectedCategory = params.get("category");
const minPrice = params.get("minPrice");
const maxPrice = params.get("maxPrice");
const sort = params.get("sort");

const sortBy = sort ? "price" : "name";
const sortOrder = sort === "asc" || sort === "desc" ? sort : "asc";

const [productsRes, categoriesRes] = await Promise.all([
    serverGet<PaginatedResponse<ProductSummary>>("/products", null, {
        page: currentPage,
        limit: 12,
        search: searchTerm,
        category: selectedCategory,
        minPrice,
        maxPrice,
        sortBy,
        sortOrder,
    }),
    serverGet<Category[]>("/categories"),
]);

const products = productsRes.data?.data ?? [];
const meta = productsRes.data?.meta ?? { page: 1, limit: 12, total: 0, totalPages: 1 };
const categories = categoriesRes.data ?? [];

const buildPageUrl = (page: number) => {
    const url = new URL(Astro.url);
    url.searchParams.set("page", String(page));
    return url.pathname + url.search;
};
---

<Layout title="Catálogo de Produtos | Emporium da Tecnologia" description="Explore nosso catálogo completo de eletrônicos. Filtre por categoria, marca e faixa de preço e encontre o produto ideal para você.">
    <Header />

    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
                Todos os Produtos
            </h1>
            <p class="text-gray-500 mt-2">
                Exibindo {products.length} de {meta.total} produtos
            </p>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <aside class="w-full lg:w-1/4 flex-shrink-0">
                <div
                    class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm sticky top-24"
                >
                    <form id="filters-form" method="GET" action="/produtos">
                        <input
                            type="checkbox"
                            id="filter-toggle"
                            class="peer hidden"
                        />

                        <label
                            for="filter-toggle"
                            class="flex lg:hidden justify-between items-center cursor-pointer select-none group"
                        >
                            <span
                                class="font-bold text-gray-900 flex items-center gap-2"
                            >
                                <ListFilter class="text-blue-600" />
                                Filtros
                            </span>
                            <ChevronDown
                                class="text-gray-400 transition-transform duration-300 peer-checked:rotate-180"
                            />
                        </label>

                        <div class="hidden peer-checked:block lg:block pt-3 lg:pb-0">
                            <div class="flex flex-col gap-4 mb-6 pb-4 border-b border-gray-100">
                                <div class="flex justify-between items-center">
                                    <span class="text-lg font-bold text-gray-900 hidden lg:block">Filtros</span>
                                </div>

                                <button
                                    type="submit"
                                    id="apply-filters-btn"
                                    disabled
                                    class="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-200 disabled:text-gray-400 disabled:cursor-not-allowed text-white font-bold py-2.5 rounded-lg transition shadow-md flex items-center justify-center gap-2"
                                >
                                    <Check class="text-xs" />
                                    Aplicar Filtros
                                </button>
                                <a
                                    href="/produtos"
                                    id="btn-clean-filters"
                                    class="text-sm text-gray-400 hover:text-red-500 transition text-center"
                                >
                                    Limpar Filtros
                                </a>
                            </div>

                            <div class="mb-4">
                                <label class="text-sm font-medium text-gray-700 block mb-1">Buscar</label>
                                <input
                                    type="text"
                                    name="s"
                                    value={searchTerm ?? ""}
                                    placeholder="Nome do produto..."
                                    class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500 outline-none"
                                />
                            </div>

                            <div class="h-px bg-gray-100 my-4"></div>

                            <div class="flex justify-between items-center mb-6">
                                <div class="flex items-center gap-3 w-full">
                                    <label class="text-sm font-medium text-gray-700 whitespace-nowrap">
                                        Ordenar por:
                                    </label>
                                    <div class="relative w-full">
                                        <select
                                            name="sort"
                                            class="appearance-none w-full bg-gray-50 border border-gray-300 text-gray-700 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 pr-8 cursor-pointer transition-colors hover:bg-white"
                                        >
                                            <option value="" selected={!sort}>Padrão</option>
                                            <option value="asc" selected={sort === "asc"}>Menor Preço</option>
                                            <option value="desc" selected={sort === "desc"}>Maior Preço</option>
                                        </select>
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {categories.length > 0 && (
                                <div class="mb-6">
                                    <details open>
                                        <summary class="flex justify-between items-center font-semibold text-gray-800 cursor-pointer mb-3 select-none">
                                            Categoria
                                        </summary>
                                        <div class="space-y-2 pl-1">
                                            {categories.map((cat) => (
                                                <label class="flex items-center gap-3 cursor-pointer group py-1">
                                                    <div class="relative flex items-center">
                                                        <input
                                                            type="radio"
                                                            name="category"
                                                            value={cat.name}
                                                            checked={selectedCategory === cat.name}
                                                            class="peer sr-only"
                                                        />
                                                        <div class="w-5 h-5 border-2 border-gray-300 rounded-full bg-white peer-checked:bg-blue-600 peer-checked:border-blue-600 peer-focus:ring-2 peer-focus:ring-blue-200 transition-all duration-200 ease-in-out" />
                                                        <div class="absolute w-2.5 h-2.5 bg-white rounded-full left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 opacity-0 peer-checked:opacity-100 transition-opacity duration-200 pointer-events-none" />
                                                    </div>
                                                    <span class={`text-sm select-none capitalize transition-colors group-hover:text-blue-600 ${selectedCategory === cat.name ? "text-gray-900 font-medium" : "text-gray-600"}`}>
                                                        {cat.name}
                                                    </span>
                                                </label>
                                            ))}
                                        </div>
                                    </details>
                                </div>
                            )}

                            <div class="h-px bg-gray-100 my-4"></div>

                            <div>
                                <div class="flex justify-between items-center mb-4">
                                    <span class="font-semibold text-gray-900">Faixa de Preço</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <div class="relative w-full">
                                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                                            <span class="text-gray-500 sm:text-sm">R$</span>
                                        </div>
                                        <input
                                            type="number"
                                            name="minPrice"
                                            id="min-price"
                                            min="0"
                                            value={minPrice ?? ""}
                                            placeholder="Mín"
                                            class="block w-full rounded-lg border-gray-300 pl-9 pr-3 py-2 text-sm focus:border-blue-500 focus:ring-blue-500 outline-none transition shadow-sm placeholder-gray-400"
                                        />
                                    </div>
                                    <span class="text-gray-400 font-medium">-</span>
                                    <div class="relative w-full">
                                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                                            <span class="text-gray-500 sm:text-sm">R$</span>
                                        </div>
                                        <input
                                            type="number"
                                            name="maxPrice"
                                            id="max-price"
                                            min="0"
                                            value={maxPrice ?? ""}
                                            placeholder="Máx"
                                            class="block w-full rounded-lg border-gray-300 pl-9 pr-3 py-2 text-sm focus:border-blue-500 focus:ring-blue-500 outline-none transition shadow-sm placeholder-gray-400"
                                        />
                                    </div>
                                </div>
                                <div class="mt-2 text-xs text-gray-500 text-right">Preços em Reais</div>
                            </div>
                        </div>
                    </form>
                </div>
            </aside>

            <div class="flex-grow">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">
                    {products.length === 0 ? (
                        <div class="col-span-2 text-center py-20 text-gray-500">
                            Nenhum produto encontrado.
                        </div>
                    ) : (
                        products.map((product) => (
                            <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-shadow duration-300 border border-gray-100 overflow-hidden flex flex-col group">
                                <div class="relative h-56 bg-gray-100 overflow-hidden">
                                    <img
                                        src={product.images[0]}
                                        alt={product.name}
                                        class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
                                    />
                                    {product.isNew && (
                                        <div class="absolute top-2 left-2 bg-blue-600 text-white text-xs font-bold px-2 py-1 rounded">
                                            Novo
                                        </div>
                                    )}
                                    {product.discountPercentage && (
                                        <div class="absolute top-2 right-2 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded">
                                            -{product.discountPercentage}%
                                        </div>
                                    )}
                                </div>
                                <div class="p-4 flex-grow flex flex-col">
                                    <span class="text-xs font-semibold text-gray-500 uppercase tracking-wide">
                                        {product.tag}
                                    </span>
                                    <h3 class="text-lg font-bold text-gray-900 mt-1 mb-2">
                                        {product.name}
                                    </h3>
                                    <div class="flex items-center mb-3">
                                        <div class="text-yellow-400 text-xs flex">
                                            <StarRating rating={product.rating} />
                                        </div>
                                        <span class="text-xs text-gray-500 ml-2">
                                            ({product.reviewsCount} reviews)
                                        </span>
                                    </div>
                                    <div class="mt-auto flex items-center justify-between pt-2">
                                        <span class="text-xl font-bold text-gray-900">
                                            {formatPrice(product.price)}
                                        </span>
                                        <a
                                            href={`/produtos/${product.id}`}
                                            class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded-lg transition shadow-md hover:shadow-lg flex items-center"
                                        >
                                            Ver Detalhes <ArrowRight class="ml-2" size={16} />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    )}
                </div>

                {meta.totalPages > 1 && (
                    <div class="mt-12 flex justify-center">
                        <nav class="flex items-center space-x-2">
                            {meta.page > 1 && (
                                <a
                                    href={buildPageUrl(meta.page - 1)}
                                    class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                                >
                                    Anterior
                                </a>
                            )}
                            {Array.from({ length: meta.totalPages }, (_, i) => i + 1).map((p) => (
                                <a
                                    href={buildPageUrl(p)}
                                    class={`px-3 py-2 rounded-md ${p === meta.page ? "bg-blue-600 text-white font-medium" : "border border-gray-300 bg-white text-gray-700 hover:bg-gray-50"}`}
                                >
                                    {p}
                                </a>
                            ))}
                            {meta.page < meta.totalPages && (
                                <a
                                    href={buildPageUrl(meta.page + 1)}
                                    class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                                >
                                    Próximo
                                </a>
                            )}
                        </nav>
                    </div>
                )}
            </div>
        </div>
    </main>

    <script>
        const form = document.getElementById("filters-form") as HTMLFormElement;
        const submitBtn = document.getElementById("apply-filters-btn") as HTMLButtonElement;

        const getFormString = (formEl: HTMLFormElement): string => {
            const formData = new FormData(formEl);
            const entries = Array.from(formData.entries()) as [string, string][];
            return new URLSearchParams(entries).toString();
        };

        const initialStateString = getFormString(form);

        form.addEventListener("input", () => {
            const hasChanged = initialStateString !== getFormString(form);
            submitBtn.disabled = !hasChanged;

            if (hasChanged) {
                submitBtn.classList.remove("bg-gray-200", "text-gray-400");
                submitBtn.classList.add("bg-blue-600", "text-white", "ring-4", "ring-blue-100");
            } else {
                submitBtn.classList.add("bg-gray-200", "text-gray-400");
                submitBtn.classList.remove("bg-blue-600", "text-white", "ring-4", "ring-blue-100");
            }
        });

        form.addEventListener("submit", () => {
            form.querySelectorAll("[name]").forEach((el) => {
                const input = el as HTMLInputElement | HTMLSelectElement;
                if (!input.value || input.value.trim() === "") {
                    input.disabled = true;
                }
            });
        });
    </script>

    <Footer />
</Layout>
