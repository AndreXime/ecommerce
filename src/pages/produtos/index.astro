---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "@/layout/layout.astro";
import StarRating from "@/components/StarRating";
import { getPaginatedProducts } from "@/database/productsMethods";
import { formatPrice } from "@/lib/utils";

export const prerender = false;

const params = Astro.url.searchParams;
const paramsData = {
    name: params.get("s"),
    category: params.get("category"),
    brand: params.get("brand"),
    minPrice: params.get("minPrice"),
    maxPrice: params.get("maxPrice"),
    sort: params.get("sort"),
};

const { data, options, metadata } = getPaginatedProducts(paramsData);

const { brands, categories, princeRange } = options;
const { totalProducts } = metadata;
---

<Layout title="Emporium da Tecnologia" description="">
    <Header />

    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
                Todos os Produtos
            </h1>
            <p class="text-gray-500 mt-2">
                Exibindo {data.length} de {totalProducts} produtos
            </p>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <aside class="w-full lg:w-1/4 flex-shrink-0">
                <div
                    class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm sticky top-24"
                >
                    <div
                        class="flex flex-col gap-4 mb-6 pb-4 border-b border-gray-100"
                    >
                        <div class="flex justify-between items-center">
                            <span class="text-lg font-bold text-gray-900"
                                >Filtros</span
                            >
                            <button
                                id="btn-clean-filters"
                                class="text-xs text-gray-400 hover:text-red-500 transition"
                            >
                                Limpar
                            </button>
                        </div>

                        <button
                            id="apply-filters-btn"
                            onclick="applyAllFilters()"
                            disabled
                            class="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-200 disabled:text-gray-400 disabled:cursor-not-allowed text-white font-bold py-2.5 rounded-lg transition shadow-md flex items-center justify-center gap-2"
                        >
                            <i class="fas fa-check text-xs"></i>
                            Aplicar Filtros
                        </button>
                    </div>

                    <div class="flex justify-between items-center mb-6">
                        <div class="flex items-center space-x-2">
                            <label class="text-sm text-gray-600"
                                >Ordenar por:</label
                            >
                            <select
                                onchange="updateFilterState('sort', this.value, this)"
                                class="text-sm border-gray-300 border rounded p-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-gray-700"
                            >
                                <option value="" selected={!paramsData.sort}>
                                    Padrão
                                </option>

                                <option
                                    value="asc"
                                    selected={paramsData.sort === "asc"}
                                >
                                    Menor Preço
                                </option>

                                <option
                                    value="desc"
                                    selected={paramsData.sort === "desc"}
                                >
                                    Maior Preço
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-6">
                        <details open class="group">
                            <summary
                                class="flex justify-between items-center font-semibold text-gray-800 cursor-pointer mb-3 select-none"
                            >
                                Categoria
                                <i
                                    class="fas fa-chevron-down text-gray-400 text-xs transition-transform group-open:rotate-180"
                                ></i>
                            </summary>
                            <div class="space-y-2 pl-1">
                                {
                                    categories.map((cat) => (
                                        <label class="flex items-center space-x-3 cursor-pointer group/item">
                                            <input
                                                type="checkbox"
                                                checked={cat.checked}
                                                onchange={`updateFilterState('category', '${cat.label}', this)`}
                                                class="form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                            />
                                            <span
                                                class={`text-gray-600 capitalize group-hover/item:text-blue-600 text-sm ${cat.checked ? "font-medium" : ""}`}
                                            >
                                                {cat.label}
                                            </span>
                                        </label>
                                    ))
                                }
                            </div>
                        </details>
                    </div>

                    <div class="h-px bg-gray-100 my-4"></div>

                    <div class="mb-6">
                        <details open class="group">
                            <summary
                                class="flex justify-between items-center font-semibold text-gray-800 cursor-pointer mb-3 select-none"
                            >
                                Marca
                                <i
                                    class="fas fa-chevron-down text-gray-400 text-xs transition-transform group-open:rotate-180"
                                ></i>
                            </summary>
                            <div class="space-y-2 pl-1">
                                {
                                    brands.map((brand) => (
                                        <label class="flex items-center space-x-3 cursor-pointer group/item">
                                            <input
                                                type="checkbox"
                                                checked={brand.checked}
                                                onchange={`updateFilterState('brand', '${brand.label}', this)`}
                                                class="form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                            />
                                            <span class="text-gray-600 group-hover/item:text-blue-600 text-sm">
                                                {brand.label}
                                            </span>
                                        </label>
                                    ))
                                }
                            </div>
                        </details>
                    </div>

                    <div class="h-px bg-gray-100 my-4"></div>

                    <div>
                        <div
                            class="flex justify-between items-center font-semibold text-gray-800 mb-4"
                        >
                            Faixa de Preço
                        </div>
                        <div class="space-y-3">
                            <div class="flex items-center gap-2">
                                De
                                <input
                                    type="number"
                                    id="min-price-input"
                                    placeholder="Min"
                                    min={princeRange.min}
                                    value={princeRange.min}
                                    oninput="updateFilterState('minPrice', this.value, this)"
                                    class="w-full border-gray-300 border rounded-md p-2 text-sm outline-none focus:ring-1 focus:ring-blue-500"
                                />
                                Até
                                <input
                                    type="number"
                                    id="max-price-input"
                                    placeholder="Max"
                                    value={princeRange.max}
                                    oninput="updateFilterState('maxPrice', this.value, this)"
                                    class="w-full border-gray-300 border rounded-md p-2 text-sm outline-none focus:ring-1 focus:ring-blue-500"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <div class="flex-grow">
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6"
                >
                    {
                        data.map((product) => (
                            <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-shadow duration-300 border border-gray-100 overflow-hidden flex flex-col group">
                                <div class="relative h-56 bg-gray-100 overflow-hidden">
                                    <img
                                        src={product.images[0]}
                                        alt={product.name}
                                        class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
                                    />

                                    {/* Badge lógica: Novo ou Desconto */}
                                    {product.isNew && (
                                        <div class="absolute top-2 left-2 bg-blue-600 text-white text-xs font-bold px-2 py-1 rounded">
                                            Novo
                                        </div>
                                    )}
                                    {product.discountPercentage && (
                                        <div class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                                            DESCONTO de{" "}
                                            {product.discountPercentage}%
                                        </div>
                                    )}
                                </div>

                                <div class="p-4 flex-grow flex flex-col">
                                    <span class="text-xs font-semibold text-gray-400 uppercase tracking-wide">
                                        {product.tag}
                                    </span>
                                    <h3 class="text-lg font-bold text-gray-900 mt-1 mb-2">
                                        {product.name}
                                    </h3>

                                    <div class="flex items-center mb-3">
                                        <div class="text-yellow-400 text-xs flex">
                                            <StarRating
                                                rating={product.rating}
                                            />
                                        </div>
                                        <span class="text-xs text-gray-500 ml-2">
                                            ({product.reviewsCount} reviews)
                                        </span>
                                    </div>

                                    <div class="mt-auto flex items-center justify-between pt-2">
                                        <span class="text-xl font-bold text-gray-900">
                                            {formatPrice(product.price)}
                                        </span>
                                        <a
                                            href={`/produtos/${product.id}`}
                                            class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded-lg transition shadow-md hover:shadow-lg flex items-center"
                                        >
                                            Ver Detalhes{" "}
                                            <i class="fas fa-arrow-right ml-2 text-xs" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div class="mt-12 flex justify-center">
                    <nav class="flex items-center space-x-2">
                        <button
                            class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                            >Anterior</button
                        >
                        <button
                            class="px-3 py-2 rounded-md bg-blue-600 text-white font-medium"
                            >1</button
                        >
                        <button
                            class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-700 hover:bg-gray-50"
                            >2</button
                        >
                        <span class="px-2 text-gray-500">...</span>
                        <button
                            class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-700 hover:bg-gray-50"
                            >12</button
                        >
                        <button
                            class="px-3 py-2 rounded-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50"
                            >Próximo</button
                        >
                    </nav>
                </div>
            </div>
        </div>
    </main>

    <script is:inline>
        const urlParams = new URLSearchParams(window.location.search);

        // 1. Estado vindo da URL (Referência)
        const initialState = {
            category: urlParams.get("category") || "",
            brand: urlParams.get("brand") || "",
            minPrice: urlParams.get("minPrice") || "",
            maxPrice: urlParams.get("maxPrice") || "",
            sort: urlParams.get("sort") || "",
        };

        // 2. Estado de trabalho
        let filterState = { ...initialState };

        function updateFilterState(key, value, element) {
            // Se for checkbox desmarcado, limpa o valor no estado
            if (element && element.type === "checkbox" && !element.checked) {
                filterState[key] = "";
            } else {
                filterState[key] = value;
            }
            checkChanges();
        }

        function checkChanges() {
            const btn = document.getElementById("apply-filters-btn");
            if (!btn) return;

            // Compara se o que o usuário fez é diferente de como a página carregou
            const hasChanged =
                JSON.stringify(initialState) !== JSON.stringify(filterState);

            btn.disabled = !hasChanged;

            if (hasChanged) {
                btn.classList.add("ring-4", "ring-blue-100");
                btn.classList.replace("bg-gray-200", "bg-blue-600"); // Garante a cor se houver mudança
            } else {
                btn.classList.remove("ring-4", "ring-blue-100");
            }
        }

        function applyAllFilters() {
            const url = new URL(window.location.href);

            Object.keys(filterState).forEach((key) => {
                if (filterState[key]) {
                    url.searchParams.set(key, filterState[key]);
                } else {
                    url.searchParams.delete(key);
                }
            });

            url.searchParams.delete("page"); // Reset de paginação
            window.location.assign(url.toString());
        }

        // Botão Limpar: Remove tudo e recarrega
        document
            .getElementById("btn-clean-filters")
            ?.addEventListener("click", () => {
                const url = new URL(
                    window.location.origin + window.location.pathname,
                );
                const search = urlParams.get("s");
                if (search) url.searchParams.set("s", search);
                window.location.assign(url.toString());
            });
    </script>

    <Footer />
</Layout>
